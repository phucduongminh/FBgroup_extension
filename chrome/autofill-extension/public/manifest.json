{
  "manifest_version": 3,
  "name": "Auto-Fill Form Extension",
  "version": "1.0",
  "description": "An extension to auto-fill web forms.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Auto Fill Form"
  },
  "background": {
    "service_worker": "../src/process/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../src/process/content.js"]
    }
  ],
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}
